doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        style 
            include ../public/css/style.css
    body 
        header.w-full.bg-orange-300(class="h-[6rem]")
            nav.flex.p-4.justify-center
                ul.flex.flex-row.gap-x-6.m-4.justify-center.items-center
                    li 
                        a.px-4.py-2.rounded-lg.bg-slate-100.shadow-xl(href="/" class=["hover:border-b border-b-red-400 transition duration-150"]) shop 
                    li 
                        a.px-4.py-2.rounded-lg.bg-slate-100.shadow-xl(href="/add-product") products 
        main.h-screen.min-w-full.p-16.bg-neutral-500.text-white 
            h1.text-center.text-3xl.font-bold.text-white All Products
            div.mx-auto.bg-white.rounded-lg.shadow-xl.p-6.my-10.text-white.grid.grid-cols-1.gap-4(class=["w-[50%] sm:grid-cols-2 lg:grid-cols-3"])
                if prods.length>1 
                    each book in prods
                        div.bg-amber-600.p-4.rounded-lg.shadow-lg
                            h1=book.title
                else    
                    - var text="No products to show"
                    h1.text-3xl.text-center.text-blue-800.capitalize= text